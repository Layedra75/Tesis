<!-- views/pages/usuarios.ejs -->

<div class="card">
  <div class="card-header">
    <h1 class="card-title">Lista de Usuarios</h1>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table" id="usuariosTable">
        <thead>
          <tr>
            <th scope="col">Rol</th>
            <th scope="col">Cédula</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Correo</th>
            <th scope="col">Número</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% usuarios.forEach(usuario => { %>
          <tr>
            <td><%= usuario.rol %></td>
            <td><%= usuario.cedula %></td>
            <td><%= usuario.name %></td>
            <td><%= usuario.lastname %></td>
            <td><%= usuario.email %></td>
            <td><%= usuario.celular %></td>
            <td class="text-center">
                <div class="dropdown">
                  <button class="btn btn-sm btn-transparent dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-ellipsis-vertical"></i>
                  </button>
                  <ul class="dropdown-menu">
                    <li><a class="dropdown-item"><i class="fa-regular fa-pen-to-square"></i> Editar</a></li>
                    <li><a class="dropdown-item"><i class="fa-regular fa-trash-can"></i> Eliminar</a></li>
                </ul>
                </div>
              </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <script>
      new DataTable("#usuariosTable");
    </script>
  </div>
</div>
